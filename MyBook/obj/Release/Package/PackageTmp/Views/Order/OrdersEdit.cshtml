@model OrdersFormViewModel
@{
    ViewBag.Title = "შეკვეთის რედაქტირება";
}

@section HeaderSection {
    <link href="~/Content/plugins/jquery-ui-1.12.0/jquery-ui.min.css" rel="stylesheet" />
    @Html.DevExpress().GetStyleSheets(new StyleSheet { ExtensionSuite = ExtensionSuite.GridView })
    @Html.DevExpress().GetScripts(new Script { ExtensionSuite = ExtensionSuite.GridView })
}

@section Breadcramps{
    <ol class="breadcrumb">
        <li><a href="@Model.OrdersUrl"><i class="fa fa-dashboard"></i> შეკვეთები</a></li>
        <li class="active"><a href="#"> @ViewBag.Title</a></li>
    </ol>
}

<div class="row">
    <div class="col-md-6">
        <div class="box">
            <div class="box-header with-border">
                <a href="@Model.SaveOrderPropertiesUrl" class="btn btn-flat btn-success" id="order-properties-save"><i class="fa fa-floppy-o"></i> შენახვა</a>
                <span class="pull-right badge @Model.StatusColor">@Model.Status</span>

                <div class="box-tools pull-right">
                </div>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group Code-1">
                            <label>სახელი</label>
                            <input type="text" class="form-control" value="@Model.Firstname" id="firstname"/>
                            <span class="error-text"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group Code-2">
                            <label>გვარი</label>
                            <input type="text" class="form-control" value="@Model.Lastname" id="lastname" />
                            <span class="error-text"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group Code-3">
                            <label>მისამართი</label>
                            <input type="text" class="form-control" value="@Model.Address" id="address" />
                            <span class="error-text"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group Code-4">
                            <label>მობილური</label>
                            <input type="text" class="form-control" value="@Model.Mobile" id="mobile" />
                            <span class="error-text"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group Code-5">
                            <label>ჩაბარების თარიღი</label>
                            <input type="text" class="form-control" value="@Model.DeliveryTime" id="deliveryTime" />
                            <span class="error-text"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>შენიშვნა</label>
                            <textarea class="form-control" value="" id="note">@Model.Note</textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="box">
            <div class="box-header with-border">
                <a href="#" class="btn btn-flat btn-default" id="add-new-order-detail"><i class="fa fa-plus"></i> დამატება</a>
                <div class="box-tools pull-right">
                </div>
            </div>
            <div class="box-body">
                @Html.Partial("_OrderDetailsGrid", Model.OrderDetailsGridViewModel)
            </div>
        </div>
    </div>
</div>

@section FooterSection {
    <script>
        var formatDateJs = "@Model.FormatDateJs"
    </script>
    <script src="~/Content/plugins/bootbox/bootbox.min.js"></script>
    <script src="~/Content/plugins/jQuery/masked-input.js"></script>
    <script src="~/Content/plugins/Validation/validation.js"></script>
    <script src="~/Content/plugins/jquery-ui-1.12.0/jquery-ui.min.js"></script>
    <script src="~/Content/scripts/Order/OrderEdit.js"></script>
}
